<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Lua Mulher"
        android:layout_gravity="center"
        android:textStyle="italic|bold"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="#FF7448"
        android:background="#CCB5F4"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left"
            android:backgroundTint="#9879CF"
            android:id="@+id/btCliente"/>

            <Button
                android:id="@+id/btItem"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#9879CF"
                android:text="Item de Venda" />

            <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Pedido de Venda"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_gravity="left"
            android:backgroundTint="#9879CF"
            android:id="@+id/btPedidoVenda"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>